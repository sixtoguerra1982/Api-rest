<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>user_id</th>
      <th>content</th>
      <th>feed</th>
      <th>JSON</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.content %></td>
        <td><%= comment.feed_id %></td>
        <td><%= link_to 'Json(' + comment.id.to_s + ')', api_v1_comment_path(comment) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


